<UserControl x:Class="io_simulation_wpf.Controls.SegmentColon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Width="10" Height="100">
        <!-- Oberer Punkt -->
        <Ellipse x:Name="DotTop" Fill="DimGray" Width="8" Height="8" 
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 Margin="0, -20, 0, 0"/>
        <!-- Unterer Punkt -->
        <Ellipse x:Name="DotBottom" Fill="DimGray" Width="8" Height="8"
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 Margin="0, 20, 0, 0"/>
    </Grid>
</UserControl>
