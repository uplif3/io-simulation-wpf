<UserControl x:Class="io_simulation_wpf.Views.SeesawView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:io_simulation_wpf.Controls"
             Height="400" Width="600">
    <Grid>
        <!-- 
            Binde alle DP-Eigenschaften unserer SeesawControl 
            an die VM-Properties (Reference, Ball, Angle, Boing).
        -->
        <local:SeesawControl 
            Reference="{Binding Reference}"
            Ball="{Binding Ball}"
            Angle="{Binding Angle}"
            Boing="{Binding Boing}"
            Background="Black"
            />
    </Grid>
</UserControl>
